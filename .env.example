# VibeTrail 2.0 Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (Server-side only - DO NOT expose in frontend)
# =============================================================================

# OpenAI API Key (for GPT-4 vibe analysis)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Qloo API Key (for cultural recommendations)  
# Get yours at: https://dashboard.qloo.com
QLOO_API_KEY=your_qloo_api_key_here

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Qloo API Base URL (hackathon endpoint)
QLOO_BASE_URL=https://hackathon.api.qloo.com

# =============================================================================
# FRONTEND CONFIGURATION (Safe to expose)
# =============================================================================

# OpenAI Model Configuration
VITE_OPENAI_MODEL=gpt-4o-mini
VITE_OPENAI_MAX_TOKENS=1500
VITE_OPENAI_TEMPERATURE=0.7

# API Proxy Configuration
VITE_API_PROXY_URL=http://localhost:3001/api
VITE_PROXY_PORT=3001

# Qloo Service Configuration
VITE_QLOO_TIMEOUT=15000
VITE_QLOO_MAX_ENTITIES=10
VITE_QLOO_MAX_TABS=5

# Feature Flags
VITE_ENABLE_DYNAMIC_TABS=true
VITE_ENABLE_CONTEXT_DETECTION=true
VITE_FALLBACK_TO_MOCK=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
NODE_ENV=development

# =============================================================================
# SECURITY NOTES
# =============================================================================

# ⚠️  IMPORTANT: API keys are handled server-side only
#    - OPENAI_API_KEY and QLOO_API_KEY are used by proxy server
#    - Frontend uses proxy endpoints, never direct API calls
#    - No VITE_*_API_KEY variables (they would be exposed in browser)
#    - In production, set these in Vercel environment variables

# ✅ SAFE: All VITE_* variables are safe to expose (no sensitive data)
# ❌ UNSAFE: Never add VITE_OPENAI_API_KEY or VITE_QLOO_API_KEY
